# HostKit Context MCP Server Configuration

# VPS Connection
HOSTKIT_VPS_HOST=YOUR_VPS_IP
HOSTKIT_VPS_PORT=22
HOSTKIT_SSH_USER=ai-operator
HOSTKIT_SSH_KEY_PATH=~/.ssh/id_ed25519

# Local Data Directory
HOSTKIT_CONTEXT_DIR=~/.hostkit-context

# Cache TTLs (milliseconds)
CACHE_TTL_PROJECTS=60000
CACHE_TTL_HEALTH=30000
CACHE_TTL_PROJECT=30000

# Logging
LOG_LEVEL=info
DEBUG=false
